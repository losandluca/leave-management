@model leave_management.Models.CreateLeaveAllocationViewmodel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                Leave Types
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.LeaveTypes) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @*@Html.ActionLink("Allocate to Employees", "SetLeave", new { id = item.Id })*@
                <a asp-action="SetLeave" class="btn btn-outline-success" asp-route-id="@item.Id">
                <i class="fa fa-pencil"></i> Allocate To Employees
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
